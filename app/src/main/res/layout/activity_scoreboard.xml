<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- 세트 스코어 (최상단 중앙) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/tvSetScoreLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="28sp"
            android:textColor="#FF8A80"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  :  "
            android:textSize="28sp"
            android:textColor="#888888"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSetScoreRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="28sp"
            android:textColor="#82B1FF"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- 점수판 & 버튼 (가로 분할) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- 왼쪽(빨간팀) -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <!-- 점수 및 서브권 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvScoreLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textSize="100sp"
                        android:textColor="#FF8A80"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/ivServeLeft"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_baseline_sports_tennis_24"
                        android:tint="#FF8A80"
                        android:layout_marginStart="12dp"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>

            <!-- 투명 버튼 (화면 절반 차지) -->
            <Button
                android:id="@+id/btnScoreLeft"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:clickable="true"
                />
        </FrameLayout>

        <!-- 오른쪽(파란팀) -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvScoreRight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:textSize="100sp"
                        android:textColor="#82B1FF"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/ivServeRight"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_baseline_sports_tennis_24"
                        android:tint="#82B1FF"
                        android:layout_marginStart="12dp"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <!-- 투명 버튼 (화면 절반 차지) -->
            <Button
                android:id="@+id/btnScoreRight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:clickable="true" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
