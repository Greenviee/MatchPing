<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 1) 내부를 완전 투명으로 처리 -->
    <solid android:color="@android:color/transparent" />

    <!-- 2) 테두리(stroke)는 흰색(#FFFFFF)으로 2dp 두께 -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFF" />

    <!-- 3) 모서리를 둥글게 (버튼 높이의 절반 정도인 22dp로 설정하면 44dp 높이일 때 반원 형태가 됨) -->
    <corners android:radius="22dp" />

    <!-- 4) (선택) 내부 텍스트가 테두리 바로 위에 붙지 않도록 패딩을 살짝 줌 -->
    <padding
        android:left="12dp"
        android:top="6dp"
        android:right="12dp"
        android:bottom="6dp" />
</shape>
